<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zgy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aizulove.com.fxxt.activity.DistributionHostActivityError:Execution failed for task ':test:processDebugManifest'.
> Manifest merger failed with multiple errors, see logs">

    <!--头部-->
    <include layout="@layout/activity_head" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@mipmap/uc_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="余额"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="5320.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jiner" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="充值"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cz" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_margin="5dp"
                    android:background="#CDCDCD"
                    android:layout_height="match_parent"></View>

                <TextView
                    android:text="取现"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tx" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_fenxiaoma"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_fenxiaocode"
            android:text="获取分销码"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_erweima"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/erweima"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <aizulove.com.fxxt.view.SlidingTabLayout
            android:id="@+id/id_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            zgy:bottomLineColor="#FFFFFF"
            zgy:dividerMargin="15dp"
            zgy:indicatorColor="#13b7f6"
            zgy:indicatorHeight="5dp"
            zgy:bottomLineHeight="2dp"
            zgy:dividermatch="true"
            android:background="#FFFFFF">
        </aizulove.com.fxxt.view.SlidingTabLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_view_pager"/>

</LinearLayout>