<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/updatemember"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@mipmap/my_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/usercenteriv"
                android:onClick="click"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:src="@mipmap/ic_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <aizulove.com.fxxt.view.RoundImageView
                android:onClick="click"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@mipmap/ic_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/avatarurl" />

            <TextView
                android:text="骑士一号"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username" />

            <LinearLayout
                android:id="@+id/ll_jifen"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="账号积分："
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="1235"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/jifen" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:background="#88E6E6E6"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:onClick="click"
                android:id="@+id/myorders"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@mipmap/my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="我的订单"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:onClick="click"
                android:id="@+id/myguanzu"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@mipmap/my_guanzu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="我的关注"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:onClick="click"
                android:id="@+id/message"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@mipmap/my_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="我的消息"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/myCars"
        android:onClick="click"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/my_car"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/my_car"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="购物车"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:padding="10dp"
            android:src="@mipmap/uc_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CDCDCD"></View>

    <RelativeLayout
    android:id="@+id/jifenrl"
    android:onClick="click"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/my_jifen"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:src="@mipmap/my_jifen"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="我的积分"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:paddingRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/my_jifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:padding="10dp"
