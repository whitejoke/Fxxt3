            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_fenxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:padding="10dp"
            android:src="@mipmap/uc_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CDCDCD"></View>

    <RelativeLayout
        android:onClick="click"
        android:id="@+id/llAdress"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/my_adress"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/my_adress"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="地址管理"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:padding="10dp"
            android:src="@mipmap/uc_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#CDCDCD"></View>

    <RelativeLayout
        android:onClick="click"
        android:id="@+id/myyouhuirl"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/my_youhui"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/my_youhui"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="我的优惠券"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_youhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:padding="10dp"
            android:src="@mipmap/uc_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CDCDCD"></View>

    <RelativeLayout
        android:id="@+id/llShare"
        android:onClick="click"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/my_share"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:src="@mipmap/my_share"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="分享蓝车世界"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:padding="10dp"
            android:src="@mipmap/uc_black"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#CDCDCD"></View>

