<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--头部-->
    <!--<include layout="@layout/activity_head" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editshape">

                <ImageView
                    android:padding="10dp"
                    android:src="@mipmap/login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/botttom_description"/>

            <EditText
                android:hint="@string/name_hint"
                android:background="@null"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/username" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editshape">

            <ImageView
                android:padding="10dp"
                android:src="@mipmap/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/botttom_description"/>

            <EditText
                android:hint="@string/password_hint"
                android:background="@null"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/password" />

        </LinearLayout>

         <Button
             android:text="@string/login_delu"
             android:layout_margin="5dp"
             android:textColor="#FFFFFF"
             android:textSize="18sp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/button_shape"
             android:id="@+id/button" />


        <TextView
            android:textSize="18sp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="@string/login_wjmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_disanfang"
        android:text="第三方登陆"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:id="@+id/ll_disanfang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/dl_wechat"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/tvQq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/dl_qq"
            android:textColor="@color/white"
            >
        </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/SinaWeibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/dl_sina"
                android:textColor="@color/white"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>