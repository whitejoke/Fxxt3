<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:tools= "http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--头部-->
    <!--<include layout="@layout/activity_head" />-->

    <!--<WebView-->
        <!--android:id="@+id/categroyWebview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="gone"-->
        <!--></WebView>-->

  <LinearLayout
      android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editshape">

                <ImageView
                    android:padding="10dp"
                    android:src="@mipmap/login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/botttom_description"/>

            <EditText
                android:id="@+id/et_username"
                android:hint="@string/name_hint"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editshape">

            <ImageView
                android:padding="10dp"
                android:src="@mipmap/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/botttom_description"/>

            <EditText
                android:id="@+id/et_userpassword"
                android:hint="@string/password_hint"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
      <LinearLayout
          android:layout_margin="5dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/editshape">

          <ImageView
              android:padding="10dp"
              android:src="@mipmap/dlzc_mail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:contentDescription="@string/botttom_description"/>

          <EditText
              android:id="@+id/et_useremail"
              android:hint="@string/email"
              android:background="@null"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />

      </LinearLayout>
      <LinearLayout
          android:layout_margin="5dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/editshape">

          <EditText
              android:id="@+id/et_fenxiao"
              android:padding="10dp"
              android:hint="输入分销码"
              android:background="@null"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent" />
          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@mipmap/shaoyishao"
              android:padding="5dp"
              android:layout_marginRight="5dp"
              android:layout_centerVertical="true"
              android:scaleType="fitXY"
              android:id="@+id/erweimaimageView"
              android:layout_alignParentRight="true" />

      </LinearLayout>

         <Button
             android:id="@+id/btn_regist"
             android:text="注册"
             android:layout_margin="5dp"
             android:textColor="#FFFFFF"
             android:textSize="18sp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/button_shape" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>


</LinearLayout>